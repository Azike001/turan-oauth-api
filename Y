from telegram.ext import Updater, CommandHandler

TOKEN = "8080091792:AAED9X1dxlMDy3Xca5qwjGlzRIS31VGAkdA"
CHANNEL = "@turanmarket001"

def start(update, context):
    update.message.reply_text("Turan Market Bot –∞–∫—Ç–∏–≤–µ–Ω! üöÄ")

def post(update, context):
    text = " ".join(context.args)
    if text:
        context.bot.send_message(chat_id=CHANNEL, text=f"üõçÔ∏è –ù–æ–≤—ã–π —Ç–æ–≤–∞—Ä: {text}")
        update.message.reply_text("‚úÖ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –≤ –∫–∞–Ω–∞–ª!")
    else:
        update.message.reply_text("‚ùó –ù–∞–ø–∏—à–∏ —Ç–µ–∫—Å—Ç —Ç–æ–≤–∞—Ä–∞ –ø–æ—Å–ª–µ –∫–æ–º–∞–Ω–¥—ã /post")

updater = Updater(TOKEN, use_context=True)
dp = updater.dispatcher

dp.add_handler(CommandHandler("start", start))
dp.add_handler(CommandHandler("post", post))

updater.start_polling()
updater.idle()

